<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="SCN.Controls"
           constructor="SCNClarityTracker"
           version="0.0.1"
           display-name-key="SCN_Clarity_Tracker"
           description-key="SCN_Clarity_Tracker description"
           control-type="standard">

    <!-- External service usage: Clarity is an external service -->
    <external-service-usage enabled="false">
    </external-service-usage>

    <!-- REQUIRED: Clarity Project Id -->
    <property name="clarityProjectId"
              display-name-key="clarityProjectId_DisplayName"
              description-key="clarityProjectId_Description"
              of-type="SingleLine.Text"
              usage="bound"
              required="true" />

    <!-- PRIVACY GATE: optional, default true in code -->
    <property name="trackingAllowed"
              display-name-key="trackingAllowed_DisplayName"
              description-key="trackingAllowed_Description"
              of-type="TwoOptions"
              usage="bound"
              default-value="false" />

    <!-- OPTIONAL metadata -->
    <property name="userId"
              display-name-key="userId_DisplayName"
              description-key="userId_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="userEmail"
              display-name-key="userEmail_DisplayName"
              description-key="userEmail_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="userName"
              display-name-key="userName_DisplayName"
              description-key="userName_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="sessionId"
              display-name-key="sessionId_DisplayName"
              description-key="sessionId_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="screenName"
              display-name-key="screenName_DisplayName"
              description-key="screenName_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="appName"
              display-name-key="appName_DisplayName"
              description-key="appName_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="environment"
              display-name-key="environment_DisplayName"
              description-key="environment_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <!-- EVENTS -->
    <property name="eventName"
              display-name-key="eventName_DisplayName"
              description-key="eventName_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="eventDataJson"
              display-name-key="eventDataJson_DisplayName"
              description-key="eventDataJson_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <property name="eventTriggerToken"
              display-name-key="eventTriggerToken_DisplayName"
              description-key="eventTriggerToken_Description"
              of-type="Whole.None"
              usage="bound" />

    <!-- SESSION TAGS -->
    <property name="sessionTagsJson"
              display-name-key="sessionTagsJson_DisplayName"
              description-key="sessionTagsJson_Description"
              of-type="SingleLine.Text"
              usage="bound" />

    <!-- TECHNICAL SWITCHES -->
    <property name="disable"
          display-name-key="disable_DisplayName"
          description-key="disable_Description"
          of-type="TwoOptions"
          usage="bound"
          default-value="false" />

    <property name="debugLogging"
              display-name-key="debugLogging_DisplayName"
              description-key="debugLogging_Description"
              of-type="TwoOptions"
              usage="bound"
              default-value="false" />

<resources>
  <code path="index.ts" order="1" />
  <resx path="strings/ClarityTracker.1033.resx" version="1.0.0" />
</resources>


    <!--
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
    -->

  </control>
</manifest>
